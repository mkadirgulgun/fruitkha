@model Product
@{
    Layout = "_AdminLayout";
}
<style>
    /* General form styling */
.container {
    width: 50%;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h2 {
    margin-bottom: 30px;
    font-size: 24px;
    color: #333;
    text-align: center;
}

form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.mb-3 {
    margin-bottom: 20px;
}

.form-label {
    font-size: 16px;
    color: #333;
    margin-bottom: 8px;
    display: block;
}

input[type="text"],
input[type="number"],
select {
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
    font-size: 16px;
    transition: border-color 0.3s ease;
}

input[type="text"]:focus,
input[type="number"]:focus,
select:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
}

select {
    background: url('data:image/svg+xml;charset=UTF-8,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8 6"%3E%3Cpath fill="none" stroke="%23999" stroke-width="1.5" d="M1 1l3 3 3-3"%3E%3C/path%3E%3C/svg%3E') no-repeat right 10px center;
    background-size: 12px 8px;
    appearance: none;
}

input[type="file"] {
    padding: 3px;
    margin-bottom: 20px;
}

input[type="image"] {
    border: 1px solid #ddd;
    border-radius: 5px;
    max-height: 200px;
    max-width: 100%;
    object-fit: contain;
    display: block;
    margin: 0 auto 20px;
}

button {
    background-color: #28a745;
    color: #fff;
    border: none;
    padding: 12px 24px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
    width: 100%;
    text-align: center;
}

button:hover {
    background-color: #218838;
}

button:active {
    background-color: #1e7e34;
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
}

</style>
<h2 class="mb-4">Ürün Düzenle</h2>

<form class="row g-3" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Ürün Adı</label>
        <input required type="text" value="@Model.Name" class="form-control" name="Name">
    </div>
    
    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input required type="number" value="@Model.Price" class="form-control" name="Price">
    </div
    <div class="mb-3">
        <label class="form-label">Stok</label>
        <input required type="number" value="@Model.Stock" class="form-control" name="Stock">
    </div>
    <div class="mb-3">
        <label class="form-label">Kategori</label>
        <select id="CategoryName" name="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                <option selected="@(category.Id == Model.CategoryId ? "selected" : null)" value="@category.Id">@category.CategoryName</option>
            }
        </select>
    </div>
    <input type="image" src="/uploads/@Model.ImgUrl" name="Image" style="height:200px; width:400px" />

    <input type="file" name="Image" @* multiple *@ accept="image/png, image/jpeg" />

    <input type="hidden" name="ImgUrl" value="@Model.ImgUrl" />

    <button class="btn btn-success">Düzenle</button>
</form>