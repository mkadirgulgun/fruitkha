					<p>@Model.Details</p>
					<div class="single-product-form">
						<form action="/shop/addtocart/@Model.Id" method="post">
							<input type="number" placeholder="1" value="1" name="Quantity">
							<button type="submit" class="cart-btn"><i class="fas fa-shopping-cart"></i> Sepete Ekle

						</form>
						<p><strong>Categories: </strong>@Model.CategoryName</p>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>
